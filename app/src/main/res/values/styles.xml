<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="android:displayOptions">showTitle</item>
    </style>

    <style name="CardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardBackgroundColor">#FFF</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">8dp</item>
    </style>

    <style name="CalculatorRows">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="DollarTheme">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="NumberTheme">
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">end</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:paddingRight">4dp</item>
        <item name="met_underlineColor">@color/gray</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="met_floatingLabelTextSize">16sp</item>
        <item name="met_floatingLabelPadding">4dp</item>
    </style>

    <style name="FunctionButton" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:background">@drawable/button</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="FAB" parent="@android:style/Widget.Button">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/fab</item>
    </style>

    <style name="IncrementButton" parent="@android:style/TextAppearance.Holo.Widget.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/light_green</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="AboutTitles">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="AboutParagraphs">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
