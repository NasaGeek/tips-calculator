<resources>

    <style name="TipCalcTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:displayOptions">showTitle</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="android:colorPressedHighlight">@color/blue</item>
        <item name="android:colorActivatedHighlight">@color/blue</item>

    </style>

    <style name="CardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="contentPadding">8dp</item>
    </style>

    <style name="CalculatorRows">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="DollarStyle">
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="NumberStyle">
        <item name="android:paddingRight">4dp</item>
        <item name="android:gravity">end</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="met_underlineColor">@color/gray</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="met_floatingLabelTextSize">16sp</item>
        <item name="met_floatingLabelPadding">4dp</item>
    </style>

    <style name="PercentSpinner">
        <item name="android:dropDownVerticalOffset">-48dp</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
    </style>

    <style name="FunctionButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="FAB">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/fab</item>
    </style>

    <style name="IncrementButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SplitCheckText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AboutText">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
