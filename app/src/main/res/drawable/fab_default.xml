<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <bitmap android:src="@drawable/fab_shadow"
            android:antialias="true"
            android:dither="true">
        </bitmap>
    </item>

    <item android:left="8dp" android:top="6dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="oval">
            <solid android:color="@color/light_green_highlight" />
        </shape>
    </item>

    <item android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="6dp">
        <shape android:shape="oval">
            <solid android:color="@color/light_green_darken" />
        </shape>
    </item>

    <item android:left="8dp" android:top="7dp" android:right="8dp" android:bottom="7dp">
        <shape android:shape="oval">
            <solid android:color="@color/light_green" />
        </shape>
    </item>

</layer-list>